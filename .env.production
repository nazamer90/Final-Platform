# Production Environment Variables
NODE_ENV=production

# Database Configuration - ishro.ly Production
DATABASE_URL=mysql://ishro_user:your_password@localhost:3306/ishro_production
DB_NAME=ishro_production
DB_USER=ishro_user
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=3306
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=ishro_production_jwt_secret_minimum_32_chars_long_key_2025_secure
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=https://www.ishro.ly
VITE_FRONTEND_URL=https://www.ishro.ly

# Backend URL (for frontend API calls)
BACKEND_URL=https://www.ishro.ly
VITE_API_URL=https://www.ishro.ly/api

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Store Base Directory
STORE_BASE_DIR=/app

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway Configuration
MOAMALAT_API_KEY=your-moamalat-api-key
MOAMALAT_HASH_ENDPOINT=https://www.ishro.ly/api/payment/moamalat
MOBICASH_API_KEY=your-mobicash-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
ENCRYPTION_KEY=ishro_production_encryption_key_64_char_hex_string_2025_secure_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Security Headers
SECURITY_HEADERS=true
CORS_ORIGIN=https://www.ishro.ly

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=1034286241802-hkdlf7mua6img2vhdo6mhna8ghb3mmhg.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=https://www.ishro.ly/auth/google/callback

# Minimax AI API Configuration
VITE_MINIMAX_API_URL=https://api.minimax.chat/v1
VITE_MINIMAX_API_KEY=your-production-minimax-api-key
VITE_MINIMAX_ENABLED=false
VITE_MINIMAX_TIMEOUT=5000
