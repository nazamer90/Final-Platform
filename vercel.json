{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci --include=dev",
  "env": {
    "FRONTEND_PRODUCTION_URL": "@frontend_production_url",
    "NODE_ENV": "production",
    "VITE_APP_API_URL": "@vite_api_url"
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "regions": [
    "iad1"
  ]
}